doctype html
html
  head
    title Mayday, Mayday!

    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1"

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  body
    header.header
      .navbar.navbar-inverse.navbar-fixed-top
        .container
          .navbar-header
            button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            = link_to '#', class: 'navbar-brand' do
              = icon('fire')

          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li = link_to 'Metrics', metrics_path
              li.dropdown
                = link_to '#', class: 'dropdown-toggle', :'data-toggle' => 'dropdown', role: 'button', :'aria-haspopup' => 'true', :'aria-expanded' => 'false' do
                  | Alerting
                  span.caret
                ul.dropdown-menu
                  li
                    = link_to 'Policies', alerting_policies_path
                    = link_to 'Incidents', alerting_incidents_path
                    = link_to 'Routing', '#'
              li = link_to 'Dashboards', '#'
              li = link_to 'Reports', '#'

    .container
      = yield
